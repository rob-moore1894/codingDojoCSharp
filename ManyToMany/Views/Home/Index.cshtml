@model Shop
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to the Bakery</h1>
    <div class="row">
        <div class="col-sm-5">
            <h2>All the Shops</h2>
            @{
                foreach(Shop s in ViewBag.AllShops)
                {
                    <h5><em><a href="/Shop/@s.ShopId">@s.ShopName</a></em></h5>
                }
            }
        </div>
        <div class="col-sm-2"></div>
        <div class="col-sm-5">
            <h2>Add the Shops</h2>
            <form asp-action="CreateShop" method="post">
                <div class="form-group">
                    <label asp-for="ShopName">Shop Name</label>
                    <input asp-for="ShopName" class = "form-control">
                    <span asp-validation-for="ShopName" class="text-danger"></span>
                </div>
                <input type="submit" value="Add Shop" class="btn btn-info">
            </form>
        </div>
    </div>
</div>
