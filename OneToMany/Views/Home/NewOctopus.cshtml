@model Octopus
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>New Octopus</title>
</head>
<body>
    <h1>Create a New Octopus</h1>
    <form asp-action="SaveOctopus" asp-controller="Home" method="post">
        <div class="form-group row">
            <label asp-for="Name" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Name">
            </div>
            <span asp-validation-for="Name" class="alert-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="Hat" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Hat">
            </div>
            <span asp-validation-for="Hat" class="alert-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="Ink_Amount" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Ink_Amount">
            </div>
            <span asp-validation-for="Ink_Amount" class="alert-danger"></span>
        </div>
        <input type="submit" class="btn btn-primary" value="Create Octopus">
    </form>
</body>
</html>