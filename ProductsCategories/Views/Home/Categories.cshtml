@model Category
@{
    ViewData["Title"] = "Categories";
}

<div class="text-center">
    <h1 class="display-4"><a href="products">Products</a> | Categories</h1>
    <div class="row">
        <div class="col-sm-5">
            <h2>New Category</h2>
            <form asp-action="CreateCategory" method="post">
                <div class="form-group">
                    <label asp-for="CategoryName"></label>
                    <input asp-for="CategoryName" class = "form-control">
                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                </div>
                <input type="submit" value="Create" class="btn btn-primary">
            </form>
        </div>
        <div class="col-sm-2"></div>
        <div class="col-sm-5">
            <h2>Existing Categories</h2>
            @{
                foreach(Category c in ViewBag.AllCategories)
                {
                    <h5><u><a href="/categories/@c.CategoryId">@c.CategoryName</a></u></h5>
                }
            }
        </div>
    </div>
</div>